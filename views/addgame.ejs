<%- include('partials/header.ejs') %>

<h1>Add a game here</h1>

<form action="/addgame" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="exampleInputEmail1">Name Game</label>
    <input type="text" class="form-control" placeholder="Zombie" name="title">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Author</label>
    <input type="text" class="form-control" placeholder="Armor Games" name="author">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Size</label>
    <input type="text" class="form-control" placeholder="480" name="width">
    <input type="text" class="form-control" placeholder="680" name="height">
  </div>

<h3>Upload Your Files</h3>
  
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text">Upload</span>
  </div>
  <div class="custom-file">
    <input type="file" class="custom-file-input" id="gameInput" name="gameFile">
    <label class="custom-file-label" for="gameInput">Game File(.swf)</label>
  </div>
</div>
<div class="input-group mb-3">
  <div class="input-group-prepend">
    <span class="input-group-text">Upload</span>
  </div>
  <div class="custom-file">
    <input type="file" class="custom-file-input" id="imageInput" name="imageFile">
    <label class="custom-file-label" for="imageInput">Image File</label>
  </div>
</div>
 
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


<%- include('partials/footer.ejs') %> 